<!-- First Container -->
<div class="container-fluid bg-1 text-center">
    <h3 class="margin" style="color: antiquewhite">Talon</h3>
    <img src="https://klike.net/uploads/posts/2020-03/1585036705_2.jpg" class="img-responsive img-circle margin"
         style="display:inline" alt="Bird" width="300" height="200">
    <h3 style="color: antiquewhite">Health in every home</h3>
</div>

<!-- Second Container -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
<div class="container-fluid bg-2 text-center">
    <a style="color: #1abc9c" href="https://talon.by/"><h1 style="color: antiquewhite">Talon.by</h1></a>
</div>
</nav>

<!-- Third Container (Grid) -->
<div class="container-fluid bg-3">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <h1 class="mt-5 md-5" style="text-align: center; font-weight:bold">Create Ticket</h1>

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.user_name) }}
                {{ form_widget(form.user_name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.data) }}
                {{ form_widget(form.data, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.name_doctor) }}
                {{ form_widget(form.name_doctor, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.specialty) }}
                {{ form_widget(form.specialty, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Submit</button>
                <button type="reset" class="btn btn-danger">Cancel</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>


<!-- Footer -->
<footer class="container-fluid bg-4 text-center">
    <a style="color: #1abc9c" href="https://talon.by/"><h1 style="color: antiquewhite">Talon.by</h1></a>
</footer>

</body>
