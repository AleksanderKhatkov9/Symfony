<!-- First Container -->
<div class="container-fluid bg-1 text-center">
    <h3 class="margin" style="color: antiquewhite">Talon</h3>
    <img src="https://klike.net/uploads/posts/2020-03/1585036705_2.jpg" class="img-responsive img-circle margin"
         style="display:inline" alt="Bird" width="300" height="200">
    <h3 style="color: antiquewhite">Health in every home</h3>
</div>

<!-- Second Container -->
<div class="container-fluid bg-2 text-center">
    <a style="color: #1abc9c" href="https://talon.by/"><h1 style="color: antiquewhite">Talon.by</h1></a>
</div>

<!-- Third Container (Grid) -->
<div class="container-fluid bg-3">
    <div class="container">
        <a class="btn btn-success" href="/web/create">Add Ticket</a>
        <div class="row justify-content-center align-items-center">

                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FIO User</th>
                        <th scope="col">Email</th>
                        <th scope="col">Data</th>
                        <th scope="col">FIO Doctor</th>
                        <th scope="col">Specialty</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ticket in list %}
                        <tr>
                            <th scope="row">{{ ticket.id }}</th>
                            <td>{{ ticket.userName }}</td>
                            <td>{{ ticket.email }}</td>
                            <td>{{ ticket.data|date('d-m-Y') }}</td>
                            <td>{{ ticket.nameDoctor }}</td>
                            <td>{{ ticket.specialty }}</td>
                            <td>
                                <a class="btn btn-success" href="/update/{{ ticket.id }}">Edit</a>
                                <a class="btn btn-danger" href="/delete/{{ ticket.id }}">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
    </div>
</div>


<!-- Footer -->
<footer class="container-fluid bg-4 text-center">
